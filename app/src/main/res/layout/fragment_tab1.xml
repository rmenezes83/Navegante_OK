<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <EditText
        android:id="@+id/edit_buscar"
        android:layout_width="582dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imgLogo"
        android:layout_marginTop="214dp"
        android:ems="10"
        android:hint="Digite seu destino"
        android:inputType="textPersonName"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColor="#999999"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_buscar"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_buscar"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="45dp"
        android:text="Buscar" />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="96dp"
        app:srcCompat="@mipmap/logonavegante" />

    <ImageView
        android:id="@+id/imgTitulo"
        android:layout_width="174dp"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="166dp"
        android:layout_marginTop="112dp"
        app:srcCompat="@mipmap/certonavegante" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lista_resultado"
        android:layout_width="match_parent"
        android:layout_height="664dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:listitem="@layout/layout_lista"></android.support.v7.widget.RecyclerView>

</RelativeLayout>