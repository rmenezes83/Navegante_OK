<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <ImageView
        android:id="@+id/imagem"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/embarc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/empresa_text"
        android:layout_alignTop="@+id/imagem"
        android:text="Nome Embarcação"
        android:textColor="#555555"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/empresa_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/embarc_text"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/imagem"
        android:text="Empresa"
        android:textColor="#999999"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/horario_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/empresa_text"
        android:layout_below="@+id/empresa_text"
        android:layout_marginTop="8dp"
        android:text="Horarios"
        android:textColor="#999999" />

    <TextView
        android:id="@+id/porto_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/empresa_text"
        android:layout_below="@+id/horario_text"
        android:layout_marginTop="8dp"
        android:text="Nome Porto"
        android:textColor="#999999" />

</RelativeLayout>